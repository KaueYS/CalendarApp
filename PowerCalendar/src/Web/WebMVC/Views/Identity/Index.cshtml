@model IdentityLoginUserViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="apple-touch-icon" href="~/icons/pages/60.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/icons/pages/76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/icons/pages/120.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/icons/pages/152.png">
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <link href="~/css/pace/pace-theme-flash.css" rel="stylesheet" type="text/css" />
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/jquery-scrollbar/jquery.scrollbar.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/css/select2/select2.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link class="main-stylesheet" href="~/css/pages/light.min.css" rel="stylesheet" type="text/css" />
    <!-- Please remove the file below for production: Contains demo classes -->
    <link class="main-stylesheet" href="~/css/pages/style.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        window.onload = function() {
            // fix for windows 8
            if (navigator.appVersion.indexOf("Windows NT 6.2") != -1)
                document.head.innerHTML += '<link rel="stylesheet" type="text/css" href="~/css/pages/windows.chrome.fix.css" />'
        }
    </script>
</head>

<body class="fixed-header menu-pin">
    <div class="login-wrapper ">
        <div class="bg-pic">
            <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
                <h1 class="semi-bold text-white">
                    Meet pages - The simplest and fastest way to build web UI for your
                    dashboard or app.
                </h1>
                <p class="small">
                    Our beautifully-designed UI Framework come with hundreds of customizable features. Every Layout is
                    just a starting point. ©2019-2020 All Rights Reserved. Pages® is a registered trademark of Revox
                    Ltd.
                </p>
            </div>
        </div>
        <div class="login-container bg-white">
            <div class="p-l-50 p-r-50 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
                <img src="assets/img/logo-48x48_c.png" alt="logo" data-src="assets/img/logo-48x48_c.png"
                     data-src-retina="assets/img/logo-48x48_c@2x.png" width="48" height="48">
                <h2 class="p-t-25">Get Started <br /> with your Dashboard</h2>
                <p class="mw-80 m-t-5">Acesso</p>
                <form id="form-login" class="p-t-15" role="form" method="post" asp-controller="Identity" asp-action="Login">
                    <div class="form-group form-group-default">
                        <label>E-mail</label>
                        <div class="controls">
                            @Html.TextBoxFor(_ => _.Email, new { @class = "form-control", required = true })
                            @Html.ValidationMessageFor(_ => _.Email, string.Empty, new { @class = "label.error", required = true })
                        </div>
                    </div>
                    <div class="form-group form-group-default">
                        <label>Senha</label>
                        <div class="controls">
                            @Html.PasswordFor(_ => _.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(_ => _.Password, string.Empty, new { @class = "label.error" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 no-padding sm-p-l-10">
                            <div class="form-check">
                                <input type="checkbox" value="1" id="checkbox1">
                                <label for="checkbox1">Me mantenha conectado</label>
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-end">
                            <button aria-label="" class="btn btn-primary btn-lg m-t-10" type="submit">Acessar</button>
                        </div>
                    </div>
                    <div class="m-b-5 m-t-30">
                        <a href="#" class="normal">Esqueceu sua senha?</a>
                    </div>
                </form>
                <div class="pull-bottom sm-pull-bottom">
                    <div class="m-b-30 p-r-80 sm-m-t-20 sm-p-r-15 sm-p-b-20 clearfix">
                        <div class="col-sm-9 no-padding m-t-10">
                            <p class="small-text normal hint-text">
                                ©2022-@DateTime.Now.Year All Rights Reserved.<a href="">Cookie Policy</a>, <a href="">Privacy and Terms</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/pace/pace.min.js" type="text/javascript"></script>
    <!--  A polyfill for browsers that don't support ligatures: remove liga.js if not needed-->
    <script src="~/js/liga/liga.js" type="text/javascript"></script>
    <script src="~/js/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/modernizr/modernizr.custom.js" type="text/javascript"></script>
    <script src="~/js/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/js/popper/popper.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/jquery-easy/jquery-easy.js" type="text/javascript"></script>
    <script src="~/js/jquery-unveil/jquery.unveil.js" type="text/javascript"></script>
    <script src="~/js/jquery-ios-list/jquery.ioslist.min.js" type="text/javascript"></script>
    <script src="~/js/jquery-actual/jquery.actual.min.js"></script>
    <script src="~/js/jquery-scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/js/select2/select2.full.min.js" type="text/javascript"></script>
    <script src="~/js/classie/classie.js" type="text/javascript"></script>
    <script src="~/js/jquery-validation/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/pages/pages.js"></script>
    <script>
        $(function() {
            $("#form-login").validate({
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true
                    }
                },
                messages: {
                    Email: "E-mail obrigatótio",
                    Password: "Senha obrigatória",
                    Password: {
                        required: "Senha obrigatória",
                        minlength: "Deve conter ao menos 6 caracteres"
                    }
                }
            });
        })
    </script>
</body>
</html>