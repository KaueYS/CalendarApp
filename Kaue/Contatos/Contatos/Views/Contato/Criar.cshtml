@model ContatoModel

@{
    ViewData["Title"] = "Lista de contatos";
}

<div class="text-center">
   
    <h1 class="display-4">Cadastrar novo contato</h1>
   
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">


  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control"placeholder="Digite o nome do contato">
    @Html.ValidationMessageFor(x => x.Nome)
   </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite telefone">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
  <br />
  <button type="submit" class="btn btn-primary">Submit</button>
  <a class="btn btn-primary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>


     
   