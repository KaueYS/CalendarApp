@model IEnumerable<Imobiliaria.Models.Imovel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeDoImovelVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeDoImovelCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDisponivel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDoImovelVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDoImovelCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDisponivel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ImovelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ImovelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ImovelId">Delete</a>
                   
            </td>
        </tr>
}
    </tbody>
</table>
