@model WebIMOBMentoria.ViewModel.ImovelViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Imovel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imovel.ImovelNomeVenda" class="control-label"></label>
                <input asp-for="Imovel.ImovelNomeVenda" class="form-control" />
                <span asp-validation-for="Imovel.ImovelNomeVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imovel.ValorDoImovel" class="control-label"></label>
                <input asp-for="Imovel.ValorDoImovel" class="form-control" />
                <span asp-validation-for="Imovel.ValorDoImovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imovel.ImovelNomeCompra" class="control-label"></label>
                <input asp-for="Imovel.ImovelNomeCompra" class="form-control" />
                <span asp-validation-for="Imovel.ImovelNomeCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imovel.ClienteId" class="control-label"></label>
                <select asp-for="Imovel.ClienteId" asp-items="@(new SelectList(Model.Clientes,"ClienteId","ClienteNome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
